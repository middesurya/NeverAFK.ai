{
  "$schema": "prd-tdd-schema-v2",
  "id": "PRD-022",
  "title": "API Versioning",
  "priority": "P2",
  "status": "pending",
  "created": "2026-01-12",
  "updated": "2026-01-12",

  "goal": {
    "summary": "Implement API versioning (v1/v2) for backward compatibility",
    "user_story": "As an API consumer, I want versioned endpoints so breaking changes don't affect me",
    "success_definition": "API supports /v1 and /v2 prefixes with different behaviors",
    "out_of_scope": ["Deprecation notices", "API documentation"]
  },

  "tdd": {
    "test_first": true,
    "test_framework": "pytest",
    "test_files": ["backend/tests/test_api_versioning.py"],
    "coverage_target": 80,
    "mutation_testing": false
  },

  "acceptance_criteria": [
    {
      "id": "AC-1",
      "given": "v1 endpoint",
      "when": "GET /v1/chat is called",
      "then": "Returns v1 response format",
      "test_file": "backend/tests/test_api_versioning.py",
      "test_command": "cd backend && pytest tests/test_api_versioning.py::test_v1_endpoint -v"
    },
    {
      "id": "AC-2",
      "given": "v2 endpoint",
      "when": "GET /v2/chat is called",
      "then": "Returns v2 response format with new fields",
      "test_file": "backend/tests/test_api_versioning.py",
      "test_command": "cd backend && pytest tests/test_api_versioning.py::test_v2_endpoint -v"
    },
    {
      "id": "AC-3",
      "given": "No version prefix",
      "when": "GET /chat is called",
      "then": "Defaults to latest stable version",
      "test_file": "backend/tests/test_api_versioning.py",
      "test_command": "cd backend && pytest tests/test_api_versioning.py::test_default_version -v"
    },
    {
      "id": "AC-4",
      "given": "Invalid version",
      "when": "GET /v99/chat is called",
      "then": "Returns 404 with available versions",
      "test_file": "backend/tests/test_api_versioning.py",
      "test_command": "cd backend && pytest tests/test_api_versioning.py::test_invalid_version -v"
    }
  ],

  "dependencies": {
    "prds": ["PRD-001"],
