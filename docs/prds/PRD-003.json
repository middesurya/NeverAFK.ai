  "goal": {
    "summary": "Write unit tests for each LangGraph node in the RAG pipeline",
    "user_story": "As a developer, I want isolated tests for each RAG component so I can identify failures quickly",
    "success_definition": "Each LangGraph node has tests covering happy path and error cases",
    "out_of_scope": ["Integration tests", "End-to-end tests"]
  },

  "tdd": {
    "test_first": true,
    "test_framework": "pytest",
    "test_files": [
      "backend/tests/test_support_agent.py",
      "backend/tests/test_vector_store.py"
    ],
    "coverage_target": 80,
    "mutation_testing": false
  },

  "acceptance_criteria": [
    {
      "id": "AC-1",
      "given": "A user query and mock vector store",
      "when": "Retrieval node is invoked",
      "then": "Returns relevant documents from mock",
      "test_file": "backend/tests/test_support_agent.py",
      "test_command": "cd backend && pytest tests/test_support_agent.py::test_retrieval_node -v"
    },
    {
      "id": "AC-2",
      "given": "Retrieved documents and query",
      "when": "Generation node is invoked",
      "then": "Returns AI response with citations",
      "test_file": "backend/tests/test_support_agent.py",
      "test_command": "cd backend && pytest tests/test_support_agent.py::test_generation_node -v"
    },
    {
      "id": "AC-3",
      "given": "A low-confidence response",
      "when": "Escalation node evaluates",
      "then": "Flags for human review",
      "test_file": "backend/tests/test_support_agent.py",
      "test_command": "cd backend && pytest tests/test_support_agent.py::test_escalation_node -v"
    },
    {
      "id": "AC-4",
      "given": "Vector store service",
      "when": "similarity_search is called with query",
      "then": "Returns documents with scores",
      "test_file": "backend/tests/test_vector_store.py",
      "test_command": "cd backend && pytest tests/test_vector_store.py::test_similarity_search -v"
    },
    {
      "id": "AC-5",
      "given": "Vector store service",
      "when": "add_documents is called",
      "then": "Documents are indexed with correct namespace",
      "test_file": "backend/tests/test_vector_store.py",
      "test_command": "cd backend && pytest tests/test_vector_store.py::test_add_documents -v"
    }
  ],

  "dependencies": {
    "prds": ["PRD-001", "PRD-002"],
