    },
    {
      "id": "AC-3",
      "given": "New conversation",
      "when": "Message is received",
      "then": "Dashboard updates in real-time",
      "test_file": "backend/tests/test_websocket.py",
      "test_command": "cd backend && pytest tests/test_websocket.py::test_realtime_update -v"
    },
    {
      "id": "AC-4",
      "given": "Connection drops",
      "when": "Client reconnects",
      "then": "Reconnection with exponential backoff succeeds",
      "test_file": "backend/tests/test_websocket.py",
      "test_command": "cd backend && pytest tests/test_websocket.py::test_reconnection -v"
    }
  ],

