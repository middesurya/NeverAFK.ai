  "updated": "2026-01-12",

  "goal": {
    "summary": "Implement circuit breaker pattern for graceful degradation when external APIs fail",
    "user_story": "As a system, I want circuit breakers so external API failures don't cascade",
    "success_definition": "Failed services are isolated, system returns graceful errors",
    "out_of_scope": ["Auto-recovery notifications", "Manual circuit override UI"]
  },

  "tdd": {
    "test_first": true,
    "test_framework": "pytest",
    "test_files": ["backend/tests/test_circuit_breaker.py"],
    "coverage_target": 80,
    "mutation_testing": false
  },

  "acceptance_criteria": [
    {
      "id": "AC-1",
      "given": "Service is healthy",
      "when": "Request is made",
      "then": "Circuit is closed, request proceeds normally",
      "test_file": "backend/tests/test_circuit_breaker.py",
      "test_command": "cd backend && pytest tests/test_circuit_breaker.py::test_closed_circuit -v"
    },
    {
      "id": "AC-2",
      "given": "Multiple failures occur",
      "when": "Failure threshold is exceeded",
      "then": "Circuit opens, subsequent requests fail fast",
      "test_file": "backend/tests/test_circuit_breaker.py",
      "test_command": "cd backend && pytest tests/test_circuit_breaker.py::test_circuit_opens -v"
    },
    {
      "id": "AC-3",
      "given": "Circuit is open",
      "when": "Timeout expires",
      "then": "Circuit enters half-open, allows test request",
      "test_file": "backend/tests/test_circuit_breaker.py",
      "test_command": "cd backend && pytest tests/test_circuit_breaker.py::test_half_open -v"
    },
    {
      "id": "AC-4",
      "given": "Circuit is open",
      "when": "Request fails fast",
      "then": "Returns graceful error with explanation",
      "test_file": "backend/tests/test_circuit_breaker.py",
      "test_command": "cd backend && pytest tests/test_circuit_breaker.py::test_graceful_error -v"
    }
  ],

  "dependencies": {
