      "test_file": "backend/tests/test_tracing.py",
      "test_command": "cd backend && pytest tests/test_tracing.py::test_trace_in_response -v"
    },
    {
      "id": "AC-4",
      "given": "Error occurs",
      "when": "Trace is recorded",
      "then": "Error details are attached to span",
      "test_file": "backend/tests/test_tracing.py",
      "test_command": "cd backend && pytest tests/test_tracing.py::test_error_span -v"
    }
  ],

